{
  "name": "asp-bookstore-management-system",
  "version": "1.0.0",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
  "build": "npm run clean && cross-env NODE_ENV=production remix vite:build",
  "postbuild": "bunx prisma generate",
  "setup:db": "bunx prisma db push && bunx prisma db seed",
  "clean": "rimraf build",
  "dev": "bun run ./server.mjs",  
  "format": "prettier --write .",
  "fmt": "biome check . --apply",
  "fmt:unsafe": "biome check . --apply-unsafe",
  "nuke": "npm run clean && rimraf node_modules package-lock.json && npm i",
  "start": "cross-env NODE_ENV=production bun run ./server.mjs",  
  "seed": "bun run app/db/seed.ts",
  "typecheck": "tsc",
  "validate": "npm run lint && npm run typecheck"
},
  "dependencies": {
    "@biomejs/biome": "^1.8.3",
    "@conform-to/react": "^1.0.5",
    "@conform-to/zod": "^1.0.5",
    "@epic-web/remember": "^1.0.2",
    "@mantine/core": "^7.7.1",
    "@mantine/dates": "^7.7.1",
    "@mantine/hooks": "^7.7.1",
    "@mantine/modals": "^7.7.1",
    "@paralleldrive/cuid2": "^2.2.2",
    "@prisma/client": "5.22.0",
    "@radix-ui/react-icons": "^1.3.0",
    "@react-email/components": "^0.0.22",
    "@remix-run/express": "^2.8.1",
    "@remix-run/node": "^2.8.1",
    "@remix-run/react": "^2.8.1",
    "@t3-oss/env-core": "^0.9.2",
    "axios": "^1.7.4",
    "bcryptjs": "^2.4.3",
    "chalk": "^5.3.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.10",
    "dotenv-cli": "^7.4.2",
    "express": "^4.19.1",
    "isbot": "^5.1.2",
    "lucide-react": "^0.427.0",
    "morgan": "^1.10.0",
    "npm-run-all": "^4.1.5",
    "pg": "^8.12.0",
    "postgres": "^3.4.4",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "remix-toast": "^1.2.0",
    "remix-utils": "^7.5.0",
    "sonner": "^1.4.41",
    "spin-delay": "^2.0.0",
    "tailwind-merge": "^2.2.2",
    "tailwindcss-animate": "^1.0.7",
    "ts-pattern": "^5.0.8",
    "zod": "^3.22.4",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.8.1",
    "@remix-run/testing": "^2.8.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/morgan": "^1.9.9",
    "@types/pg": "^8.11.6",
    "@types/react": "^18.2.69",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "execa": "^8.0.1",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "jsdom": "^24.0.0",
    "node-html-parser": "^6.1.12",
    "postcss": "^8.4.38",
