    "remix-development-tools": "^4.0.10",
    "remix-flat-routes": "^0.6.4",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.7.1",
    "typescript": "^5.4.3",
    "vite": "^5.2.3",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "overrides": {
    "@types/mime": "3.0.4"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "trustedDependencies": ["@biomejs/biome", "esbuild"]
}
